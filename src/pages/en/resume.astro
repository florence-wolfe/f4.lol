---
import Layout from '~/layouts/BaseLayout.astro';
import Breadcrumbs from '~/components/Breadcrumbs.astro';

const meta = {
  title: "Flo's resume",
  description: "Flo's resume",
  dontUseTitleTemplate: true,
};
const year = new Date().getFullYear();
const resume = `https://raw.githubusercontent.com/florence-wolfe/f4.lol/main/resume/florence_wolfe_resume_${year}.pdf`;
const iframeSrc = `https://mozilla.github.io/pdf.js/web/viewer.html?file=${resume}&zoom=page-width`;
---

<Layout {meta}>
  <Breadcrumbs />
  <main class="grow hero bg-base-300">
    <div class="p-4 w-full h-full">
      <article class="prose">
        <h1 class="mb-4">Resume</h1>
        <p class="mt-0 mb-6 text-lg font-normal text-gray-500">
          This resume is automatically generated and updated when the website gets deployed.
        </p>
      </article>
      <iframe width="100%" height="600px" src={iframeSrc}></iframe>
    </div>
  </main>
</Layout>
